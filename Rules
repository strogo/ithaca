#!/usr/bin/env ruby

# A few helpful tips about the Rules file:
#
# * The order of rules is important: for each item, only the first
# matching rule is applied.
#
# * Item identifiers start and end with a slash (e.g. “/about/”
# for the file “content/about.html”). To select all children,
# grandchildren, … of an item, use the pattern “/about/*/”;
# “/about/*” will also select the parent, because “*” matches
# zero or more characters.

compile '/' do
  filter :erb
  layout 'default'
end

route '/' do
  '/index.html'
end

compile '/static/*/' do
end

route '/static/*/' do
  item.identifier[7..-2]
end

compile '/about/' do
  filter :erb
  filter :redcarpet2, :options => [:smart]
  layout 'default'
end

route '/about/' do
  '/about.html'
end

compile '/archive/' do
  filter :erb
  layout 'default'
end

route '/archive/' do
  '/archive.html'
end

compile '/atom/' do
  filter :erb
end

route '/atom/' do
  '/atom.xml'
end

compile %r{^/201[0-9]{1}-[0-9]{2}-[0-9]{2}} do
  filter :redcarpet2, :options => [:smart]
  layout 'post'
end

route %r{^/201[0-9]{1}-[0-9]{2}-[0-9]{2}} do
  blog_route(item)
end

compile '/css/normalize/' do
  filter :rainpress
end

compile '/css/*/' do
  filter :sass, :syntax => :scss
  filter :rainpress
end

route '/css/*/' do
  item.identifier.chop + '.css'
end

layout '/*/', :erb
